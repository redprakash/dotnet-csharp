@model IEnumerable<InAndOut.Models.Expense>
<div class="container p-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-success" asp-area="" asp-controller="Expense" asp-action="Create">Create new Expense</a>
        </div>
    </div>
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                   
                    <th>Expense</th>
                    <th>Amount</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="35%">@expense.ExpenseName</td>
                        <td width="35%">@expense.Amount</td>
                      
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="Update" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="Delete" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-warning">No Items created yet</h3>
    }
</div>